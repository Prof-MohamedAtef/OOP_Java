package test_Proj;

import java.util.Arrays;
import java.util.HashSet;
import java.util.LinkedHashSet;

public class MergeNames {
	
	public static void uniqueNames(String[] first, String[] second) {
		
//		String names []=new String [names1.length+names2.length]  ;
		
		String[] both = Arrays.copyOf(first, first.length + second.length);
		System.arraycopy(second, 0, both, first.length, second.length);
		Arrays.stream(both).distinct().toArray();
	
//		removeDublicates(both);
//		return both;
		
		removeDublicates(both);
	}
	
	

	public static Object[] removeDublicates(String[] arr) {
		int end=arr.length;
		HashSet<String> set=new HashSet<String>(end);
		for(int i=0; i<end; i++) {
			set.add(arr[i]);
		}
		
		return set.toArray();
		
	}
	

